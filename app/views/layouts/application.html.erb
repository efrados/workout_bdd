<!DOCTYPE html>
<html>
  <head>
    <title>WorkoutBdd</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="col-md-10 offset-md-1">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
          <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapsable" aria-controls="navbarCollapsable" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">Navbar</a>
            <div class="collapse navbar-collapse" id="navbarCollapsable">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <%= link_to 'Home', root_path, class:"nav-link active" %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Athletes Den', '#', class:"nav-link" %>
                </li>
                <li class="nav-item">
                  <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                </li>
              </ul>
              <ul class="d-flex navbar-nav">
                <% if user_signed_in? %>
                  <li class="nav-item">
                    <%= link_to destroy_user_session_path,
                               method: :delete, class: "nav-link" do %>
                    <span class="text-white">
                      <%= current_user.email %>
                      (Sign out)
                    </span>
                    <% end %>
                  </li>
                <% else %>
                  <li class="nav-item">
                    <%= link_to 'Sign up', new_user_registration_path, class:"nav-link" %>
                  </li>
                  <li class="nav-item">
                    <%= link_to 'Sign in', new_user_session_path, class:"nav-link" %>
                  </li>
                <% end %>
              </ul>

            </div>
          </div>
        </nav>
        <div class="row">
          <div class="col-md-10 offset-md-1">
            <% flash.each do |key, message| %> 
              <div class="text-center alert alert-<%= key == 'notice'? 'success': 'danger' %>">
                <%= message %> 
              </div>
            <% end %>
            <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
