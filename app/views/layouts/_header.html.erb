<header class="navbar navbar-expand-lg navbar-dark mb-4 bd-navbar">
  <nav class="col-md-8 offset-md-2 container-fluid">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler flex-row-reverse" type="button" data-bs-toggle="collapse" data-bs-target="#bdNavbar" aria-controls="bdNavbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="bdNavbar">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'Home', root_path, class:"nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Athletes Den', '#', class:"nav-link" %>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
        </li>
      </ul>
      <ul class="d-flex navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <li class="nav-item">
              <%= link_to 'My Lounge', user_exercises_path(current_user), class:"nav-link" %>
            </li>
            <%= link_to destroy_user_session_path,
                       method: :delete, class: "nav-link" do %>
            <span class="text-white">
              <%= current_user.email %>
              (Sign out)
            </span>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Sign up', new_user_registration_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign in', new_user_session_path, class:"nav-link" %>
          </li>
        <% end %>
      </ul>

    </div>
  </nav>
</header>